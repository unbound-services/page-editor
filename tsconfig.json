{
  "compilerOptions": {
    "outDir": "./pkg_build/",
    "declaration": true,
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "declarationMap": true, // (Optional) Source maps for .d.ts
    "emitDeclarationOnly": true, // Prevents generating .js files (optional)
    "module": "es6",
    "lib": [
      "ESNext",
      "dom"
    ],
    // "lib": ["es2015", "es2016", "es2017", "dom"],
    // "lib": [  "es6"],
    "target": "es6",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    // "types":["@types/jest","node"],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      //   "react": [
      //     "node_modules/preact/compat"
      //   ],
      //   "react-dom": [
      //     "node_modules/preact/compat"
      //   ],
      "react/jsx-runtime": [
        "./node_modules/react/jsx-runtime"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    // these options are overrides used only by ts-node
    "compilerOptions": {
      "module": "ESNext"
    }
  },
}